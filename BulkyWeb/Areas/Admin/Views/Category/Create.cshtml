@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <h2 class="text-white text-center py-2">Kreiraj Kategoriju</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">

                <!-- tag 'asp-validation-summary' kada ima vrednost 'All' ce prikazati sve greske u
                    telu elementa 'div'-->
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" data-val-required="Polje 'Naziv kategorije' je obavezno!!" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow" data-val-required="Polje 'Redosled prikazivanja' je obavezno!!" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <!--Kada korsnik klikne na dugme koje je tipa 'SUBMIT', podaci koje je korisnik
                            uneo u pogled ce se proslediti 'Action' metodi koja je tipa 'POST'. Metodi ce se
                            proslediti objekat tipa 'Category', tako da metoda mora da ima parametar koji je
                            tipa 'Category'.
                        -->
                        <button type="submit" class="btn btn-primary form-control">Kreiraj</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Vrati se nazad
                        </a>
                    </div>

                </div>
            </div>
        </form>

    </div>


</div>




<!--Za validacije na strani klijenta, moramo da ubacimo  '_ValidationScriptsPartial.cshtml' fajl koji se
    nalazi u direktorijumu 'Shared', a taj direktorijum se nalazi u direktorijumu 'Views'.
    '_ValidationScriptsPartial.cshtml' fajl sadrzi JQuerry skripte koji proveravaju vrednosti odredjenih atributa
    'input' elemenata i na osnovu toga gledaju da li vrednost 'input' elementa se pridrzava ogranicenja.
-->
@section Scripts{
   @{
    <partial name="_ValidationScriptsPartial"/>
   }
}